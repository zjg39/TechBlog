<div class="post card position-absolute top-50 start-50 col-2">
  <div class="card-header bg-primary text-center">
    <h2>Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Title: </label>
    <input type="text" name="post-title" class="form-input bg-info" />

    <label class="form-label" for="post-body">Content: </label>
    <textarea name="post-body" class="form-input"></textarea>

    <button type="submit" class="btn bg-primary position-relative bottom-0 start-50">Create</button>
  </form>
</div>

<script src="/js/new.js"></script>