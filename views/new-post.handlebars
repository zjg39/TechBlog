<div class="post card position-absolute start-50 border-dark">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body bg-light">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" class="form-input" />

    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" class="form-input"></textarea>

    <button type="submit" class="btn-success position-relative start-50">Create</button>
  </form>
</div>

<script src="/js/new.js"></script>