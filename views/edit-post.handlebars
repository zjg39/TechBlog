<div class="card position-absolutestart-50 col-2 mt-2">
    <div class="card-header bg-primary text-white text-center">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" name="post-id" value="{{post.id}}" />

        <label class="form-label me-5" for="post-title">Title:</label>
        <input type="text" name="post-title" value="{{post.title}}" class="form-input mt-2" />

        <label class="form-label me-5 mt-3" for="post-body">Content:</label>
        <textarea name="post-body" class="form-input me-5">{{post.body}}</textarea>

        <button type="submit" class="btn-primary">Update</button>

        <button type="button" id="delete-btn" class="btn-danger">Delete</button>
    </form>
</div>

<script src="/js/edit.js"></script>